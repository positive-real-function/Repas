/* pages/record/index.wxss */
.record-container {
  min-height: 100vh;
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.tabs {
  display: flex;
  padding: 8px 16px;
  background: #fff;
  border-bottom: 1px solid #eee;
  justify-content: space-between;
  align-items: center;
}

.tab-wrapper {
  display: flex;
  gap: 18px;
}

.tab-item {
  font-size: 14px;
  padding: 4px 4px;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #333;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: -10px;
  left: 0;
  right: 0;
  height: 2px;
  background: #07C160;
}

.record-list {
  flex: 1;
  padding: 8px 8px;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.date-group {
  margin-bottom: 12px;
}

.date {
  padding-left: 4px;
  font-size: 12px;
  color: #666;
  margin-bottom: 6px;
}

.meal-cards {
  display: flex;
  flex-wrap: wrap;
  gap: 4px;
}

.meal-card {
  background: #fff;
  border-radius: 8px;
  overflow: hidden;
  width: calc((100% - 8px) / 3);
  position: relative;
  display: flex;
  flex-direction: column;
  aspect-ratio: 1;
}

.meal-image {
  width: 100%;
  height: calc(100% - 44px);
  background: #eee;
  object-fit: cover;
}

.meal-type-bar {
  height: 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 4px;
  background: #fff;
}

.meal-type {
  font-size: 8px;
  color: #666;
}

.meal-price {
  font-size: 8px;
  color: #666;
}

.avatar {
  width: 14px;
  height: 14px;
  border-radius: 50%;
  flex-shrink: 0;
}

.add-button {
  position: fixed;
  right: 20px;
  bottom: 20px;
  width: 50px;
  height: 50px;
  background: #07C160;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 12px rgba(7,193,96,0.3);
  transition: all 0.3s ease;
}

.add-button:active {
  transform: scale(0.95);
  box-shadow: 0 2px 8px rgba(7,193,96,0.2);
}

.plus {
  color: #fff;
  font-size: 30px;
  font-weight: 300;
}

.time-wrapper {
  display: flex;
  align-items: center;
  font-size: 12px;
  color: #999;
}

.time {
  margin-right: 4px;
}

.timezone {
  background: #f5f5f5;
  padding: 2px 6px;
  border-radius: 4px;
}

.meal-info {
  height: 24px;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 4px;
  gap: 4px;
}

.meal-name {
  font-size: 8px;
  color: #333;
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-left: 4px;
}

.meal-card {
  position: relative;
}