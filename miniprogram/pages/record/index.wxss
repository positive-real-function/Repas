/* pages/record/index.wxss */
.record-container {
  min-height: 100vh;
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.tabs {
  display: flex;
  padding: 8px 16px;
  background: #fff;
  border-bottom: 1px solid #eee;
  justify-content: space-between;
  align-items: center;
}

.tab-wrapper {
  display: flex;
  gap: 18px;
}

.tab-item {
  font-size: 14px;
  padding: 4px 4px;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #333;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: -10px;
  left: 0;
  right: 0;
  height: 2px;
  background: #07C160;
}

.record-list {
  flex: 1;
  padding: 8px 2px;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.date-group {
  margin-bottom: 8px;
}

.date {
  padding-left: 2px;
  font-size: 12px;
  color: #666;
  margin-bottom: 6px;
}

.meal-cards {
  display: flex;
  flex-wrap: wrap;
  gap: 2px;
  padding: 0;
  width: 100%;
  justify-content: flex-start;
}

.meal-card {
  background: #fff;
  border-radius: 6px;
  overflow: hidden;
  width: 32%;
  position: relative;
  display: flex;
  flex-direction: column;
  aspect-ratio: 1;
  margin: 0;
  margin-right: 2px;
}

.meal-card:nth-child(3n) {
  margin-right: 0;
}

.meal-image {
  width: 100%;
  height: calc(100% - 40px);
  background: #eee;
  object-fit: cover;
  border-radius: 4px;
}

.meal-type-bar {
  height: 18px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 4px;
  background: #fff;
}

.meal-type {
  font-size: 8px;
  color: #666;
}

.meal-price {
  font-size: 8px;
  color: #666;
}

.avatar {
  width: 14px;
  height: 14px;
  border-radius: 50%;
  flex-shrink: 0;
}

.add-button {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #07c160;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
  z-index: 999;
}

.add-button:active {
  transform: scale(0.95);
  box-shadow: 0 2px 8px rgba(7,193,96,0.2);
}

.plus {
  color: #fff;
  font-size: 30px;
  font-weight: 300;
}

.time-wrapper {
  display: flex;
  align-items: center;
  font-size: 12px;
  color: #999;
}

.time {
  margin-right: 4px;
}

.timezone {
  background: #f5f5f5;
  padding: 2px 6px;
  border-radius: 4px;
}

.meal-info {
  height: 22px;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 4px;
  gap: 4px;
}

.meal-name {
  font-size: 8px;
  color: #333;
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-left: 4px;
}

.meal-card {
  position: relative;
}

.record-item {
  transition: all 0.2s ease;
  transform-origin: center;
}

.scale-active {
  transform: scale(0.95);
}

.meal-image-container {
  position: relative;
  width: 100%;
  height: 200rpx;
}

.meal-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.heart-icon {
  position: absolute;
  right: 8rpx;
  bottom: 8rpx;
  width: 32rpx;
  height: 32rpx;
  z-index: 2;
  filter: drop-shadow(0 0 1px rgba(0,0,0,0.3));
  transition: all 0.3s cubic-bezier(0.18, 0.89, 0.32, 1.28);
}

/* 未点亮状态的爱心 */
.heart-icon[src*="heart-outline"] {
  filter: brightness(0) invert(1) drop-shadow(0 0 1px rgba(0,0,0,0.3));
}

/* 点亮状态的爱心 */
.heart-icon[src*="heart-filled"] {
  transform: scale(1.2);
  animation: heartPop 0.3s cubic-bezier(0.18, 0.89, 0.32, 1.28) forwards;
}

@keyframes heartPop {
  0% {
    transform: scale(0.8) rotate(-10deg);
    opacity: 0.8;
  }
  50% {
    transform: scale(1.3) rotate(5deg);
  }
  100% {
    transform: scale(1) rotate(0);
    opacity: 1;
  }
}

/* 点击效果 */
.heart-icon:active {
  transform: scale(0.85);
}

/* 添加新的样式 */
.image-nav {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  padding: 0 8rpx;
  pointer-events: none;
}

.nav-btn {
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  pointer-events: auto;
}

.nav-btn.disabled {
  opacity: 0.5;
  pointer-events: none;
}

.image-indicator {
  position: absolute;
  right: 8rpx;
  top: 8rpx;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 10rpx;
}

/* 调整心形图标的位置，避免与图片指示器重叠 */
.heart-icon {
  bottom: 8rpx;
  right: 8rpx;
  z-index: 3;
}