.edit-container {
  min-height: 100vh;
  background: #f6f6f6;
  padding-bottom: 40px;
}

.preview-container {
  position: relative;
  width: 100%;
  height: 240px;
  background: #f6f6f6;
  margin-bottom: 16px;
}

.image-preview {
  width: 100%;
  height: 100%;
  position: relative;
}

.preview-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.image-nav {
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  transform: translateY(-50%);
  display: flex;
  justify-content: space-between;
  padding: 0 16px;
}

.nav-btn {
  width: 32px;
  height: 32px;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18px;
}

.nav-btn.disabled {
  opacity: 0.5;
  pointer-events: none;
}

.delete-btn {
  position: absolute;
  top: 8px;
  right: 8px;
  width: 24px;
  height: 24px;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16px;
}

.add-image-btn {
  width: 100%;
  height: 100%;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999;
}

.plus {
  font-size: 32px;
  margin-bottom: 8px;
}

.tip {
  font-size: 14px;
}

.form-container {
  background: #fff;
  padding: 0 16px;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 16px 0;
  border-bottom: 1px solid #eee;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  width: 60px;
  font-size: 15px;
  color: #333;
}

.picker {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 15px;
  color: #333;
}

.arrow {
  width: 16px;
  height: 16px;
  margin-left: 8px;
}

.input {
  flex: 1;
  font-size: 15px;
  color: #333;
}

.price-input {
  flex: 1;
  display: flex;
  align-items: center;
}

.currency {
  font-size: 15px;
  color: #333;
  margin-right: 4px;
}

.save-button {
  position: fixed;
  left: 16px;
  right: 16px;
  bottom: 32px;
  height: 44px;
  background: #07C160;
  color: #fff;
  font-size: 16px;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.save-button:active {
  opacity: 0.9;
} 