.edit-container {
  min-height: 100vh;
  background: #f6f6f6;
  padding-bottom: 40px;
}

.preview-image {
  width: 100%;
  height: 240px;
  background: #eee;
  margin-bottom: 16px;
}

.form-container {
  background: #fff;
  padding: 0 16px;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 16px 0;
  border-bottom: 1px solid #eee;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  width: 60px;
  font-size: 15px;
  color: #333;
}

.picker {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 15px;
  color: #333;
}

.arrow {
  width: 16px;
  height: 16px;
  margin-left: 8px;
}

.input {
  flex: 1;
  font-size: 15px;
  color: #333;
}

.price-input {
  flex: 1;
  display: flex;
  align-items: center;
}

.currency {
  font-size: 15px;
  color: #333;
  margin-right: 4px;
}

.save-button {
  position: fixed;
  left: 16px;
  right: 16px;
  bottom: 32px;
  height: 44px;
  background: #07C160;
  color: #fff;
  font-size: 16px;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.save-button:active {
  opacity: 0.9;
} 