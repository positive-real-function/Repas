.diary-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f0f2f5 0%, #f6f8fa 100%);
  padding: 16px;
}

.weather-selector {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 12px;
  padding: 16px;
  margin-bottom: 20px;
  box-shadow: 0 4px 16px rgba(0,0,0,0.06);
}

.weather-title {
  font-size: 14px;
  color: #666;
  margin-bottom: 12px;
}

.weather-list {
  display: flex;
  justify-content: space-around;
}

.weather-item {
  font-size: 24px;
  padding: 8px;
  border-radius: 8px;
  transition: all 0.3s ease;
}

.weather-item.selected {
  background: rgba(7, 193, 96, 0.1);
  transform: scale(1.1);
}

.diary-list {
  padding-bottom: 80px;
}

.diary-item {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 12px;
  padding: 16px;
  margin-bottom: 16px;
  box-shadow: 0 4px 16px rgba(0,0,0,0.06);
  transition: transform 0.3s ease;
}

.diary-item:active {
  transform: scale(0.98);
}

.diary-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12px;
  align-items: center;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 12px;
}

.avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.user-meta {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.username {
  font-size: 14px;
  font-weight: 500;
  color: #333;
}

.diary-date {
  font-size: 14px;
  color: #666;
}

.diary-weather {
  font-size: 20px;
  color: #888;
}

.diary-content {
  font-size: 15px;
  color: #333;
  line-height: 1.6;
  margin-bottom: 12px;
  text-align: justify;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 6;
  overflow: hidden;
}

.diary-images {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 8px;
  margin-bottom: 12px;
}

.diary-image {
  width: 100%;
  height: 100px;
  border-radius: 8px;
  background: #f0f0f0;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.diary-image:active {
  transform: scale(0.95);
}

.diary-footer {
  display: flex;
  justify-content: space-between;
  font-size: 12px;
  color: #888;
  padding-top: 8px;
  border-top: 1px solid rgba(0, 0, 0, 0.05);
}

.diary-mood {
  display: flex;
  align-items: center;
  gap: 4px;
}

.diary-location {
  display: flex;
  align-items: center;
  gap: 4px;
  color: #07C160;
}

.add-button {
  position: fixed;
  right: 20px;
  bottom: 20px;
  width: 50px;
  height: 50px;
  background: #07C160;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 12px rgba(7,193,96,0.3);
  transition: all 0.3s ease;
}

.add-button:active {
  transform: scale(0.95);
  box-shadow: 0 2px 8px rgba(7,193,96,0.2);
}

.plus {
  color: #fff;
  font-size: 30px;
  font-weight: 300;
} 