<view class="login-container">
  <view class="login-box">
    <view class="title">测试账号登录</view>
    
    <view class="input-group">
      <input 
        class="input-item"
        type="text" 
        placeholder="请输入用户名" 
        data-field="username"
        bindinput="onInput"
      />
      <input 
        class="input-item"
        type="password" 
        password="true"
        placeholder="请输入密码" 
        data-field="password"
        bindinput="onInput"
      />
    </view>

    <button class="login-btn" bindtap="handleLogin">登录</button>
  </view>
</view> 