/* pages/toilet/index.wxss */
.container {
  min-height: 100vh;
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
}

.tabs {
  display: flex;
  padding: 10px 16px;
  background: #fff;
  border-bottom: 1px solid #eee;
}

.tab-item {
  padding: 6px 12px;
  color: #666;
  position: relative;
  margin-right: 16px;
}

.tab-item.active {
  color: #333;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: -11px;
  left: 0;
  right: 0;
  height: 2px;
  background: #07C160;
}

.record-list {
  flex: 1;
  padding: 16px;
}

.record-item {
  background: #fff;
  border-radius: 8px;
  padding: 12px;
  display: flex;
  align-items: center;
  margin-bottom: 12px;
}

.avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 12px;
}

.time {
  color: #666;
  font-size: 14px;
}

.add-button {
  position: fixed;
  right: 20px;
  bottom: 20px;
  width: 50px;
  height: 50px;
  background: #07C160;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 12px rgba(7,193,96,0.3);
}

.plus {
  color: #fff;
  font-size: 30px;
  font-weight: 300;
}