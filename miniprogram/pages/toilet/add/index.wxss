/* pages/toilet/add/index.wxss */
.container {
  height: 100vh;
  position: relative;
  background: #fff;
}

.content {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx;
}

/* 标题样式 */
.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-top: 40rpx;
  margin-bottom: 60rpx;
  letter-spacing: 4rpx;
}

/* 中间图片样式 */
.poo-image {
  width: 460rpx;
  height: 460rpx;
  border-radius: 40rpx;
  margin: 20rpx 0;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
  background: #fff;
  padding: 20rpx;
  border: 2rpx solid rgba(0, 0, 0, 0.1);
}

/* 计时器样式 */
.timer {
  font-size: 56rpx;
  font-family: 'Courier New', monospace;
  color: #333;
  margin: 60rpx 0;
  letter-spacing: 2rpx;
  font-weight: 500;
}

/* 按钮样式 */
.action-btn {
  width: 240rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  background: #fff;
  border: none;
  color: #333;
  font-size: 32rpx;
  margin-top: 40rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

/* 开始按钮特殊样式 */
.action-btn.start {
  background: #A8D8FF;  /* 淡蓝色背景 */
  color: #fff;  /* 白色文字 */
  box-shadow: 0 4rpx 12rpx rgba(168, 216, 255, 0.4);  /* 淡蓝色阴影 */
}

.action-btn::after {
  border: none;
}

.action-btn:active {
  transform: scale(0.96);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

/* 开始按钮点击效果 */
.action-btn.start:active {
  background: #8CCCFF;  /* 稍深一点的淡蓝色 */
  box-shadow: 0 2rpx 6rpx rgba(168, 216, 255, 0.3);
}

/* 添加按钮组样式 */
.btn-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  width: 100%;
  align-items: center;
}

/* 修改按钮样式 */
.action-btn.success {
  background: #A8D8FF;
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(168, 216, 255, 0.4);
}

.action-btn.fail {
  background: #fff;
  color: #999;
  border: 2rpx solid #ddd;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.action-btn.success:active {
  background: #8CCCFF;
  box-shadow: 0 2rpx 6rpx rgba(168, 216, 255, 0.3);
}

.action-btn.fail:active {
  background: #f8f8f8;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.03);
}