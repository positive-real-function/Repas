.container {
  min-height: 100vh;
  padding: 40rpx;
  background: #fff;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
  text-align: center;
}

.form-item {
  margin-bottom: 40rpx;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.color-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.color-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 120rpx;
}

.color-item image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.color-item text {
  font-size: 24rpx;
  color: #999;
}

.color-item.active {
  position: relative;
}

.color-item.active::after {
  content: '';
  position: absolute;
  width: 100%;
  height: 100%;
  border: 4rpx solid #ff8fa3;
  border-radius: 12rpx;
  top: -4rpx;
  left: -4rpx;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.tag {
  padding: 12rpx 24rpx;
  background: #f5f5f5;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #666;
}

.tag.active {
  background: #ff8fa3;
  color: #fff;
}

.submit-btn {
  position: fixed;
  bottom: 40rpx;
  left: 40rpx;
  right: 40rpx;
  height: 88rpx;
  background: #ff8fa3;
  color: #fff;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
} 