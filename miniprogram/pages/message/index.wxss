/* pages/message/index.wxss */
.message-page {
  min-height: 100vh;
  background: #f7f7f7;
  padding: 20rpx;
}

.message-item {
  background: white;
  padding: 24rpx;
  border-radius: 16rpx;
  display: flex;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  position: relative;
  overflow: hidden;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  touch-action: pan-x pan-y;
}

.message-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 6rpx;
  background: #88abda;
  border-radius: 6rpx;
}

.user-avatar image {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  border: 4rpx solid rgba(136, 171, 218, 0.3);
}

.message-content {
  flex: 1;
}

.user-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.message-text {
  font-size: 30rpx;
  color: #1a1a1a;
  line-height: 1.5;
}

.message-time {
  font-size: 24rpx;
  color: #adc5e6;
  margin-top: 12rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  color: #adc5e6;
  font-size: 28rpx;
  margin-bottom: 40rpx;
}

.write-message-btn {
  background: #88abda;
  color: white;
  font-size: 30rpx;
  padding: 20rpx 60rpx;
  border-radius: 100rpx;
}

.reach-bottom {
  text-align: center;
  color: #adc5e6;
  font-size: 24rpx;
  padding: 16rpx 0;
  opacity: 0.8;
}

.bottom-btns {
  position: fixed;
  bottom: 50rpx;
  right: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 20rpx;
  z-index: 99;
}

.menu-item {
  background: #7799c8;
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transform: translateY(20rpx);
  opacity: 0;
  transition: all 0.3s ease;
  margin-bottom: 20rpx;
  pointer-events: auto;
  z-index: 100;
}

.menu-item.show {
  transform: translateY(0);
  opacity: 1;
}

.menu-item text {
  color: white;
  font-size: 28rpx;
}

.float-btn {
  background: #88abda;
  box-shadow: 0 4rpx 16rpx rgba(136, 171, 218, 0.4);
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.plus-icon {
  color: white;
  font-size: 60rpx;
  font-weight: 300;
  transition: all 0.3s ease;
}

.show-menu .plus-icon {
  transform: rotate(45deg);
}

.show-menu.float-btn {
  background: #7799c8;
}

/* 修改顶部样式 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 24rpx;
  margin-bottom: 10rpx;
}

.left {
  display: flex;
  align-items: center;
  background: #88abda;
  padding: 12rpx 24rpx;
  border-radius: 100rpx;
  box-shadow: 0 2rpx 12rpx rgba(136, 171, 218, 0.3);
}

.left text {
  font-size: 30rpx;
  color: #fff;
  font-weight: 500;
}

.arrow {
  margin-left: 6rpx;
  color: rgba(255, 255, 255, 0.6);
  font-size: 26rpx;
}

.right {
  padding: 12rpx 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #88abda;
  border-radius: 100rpx;
  box-shadow: 0 2rpx 12rpx rgba(136, 171, 218, 0.3);
}

.search-icon {
  width: 36rpx;
  height: 36rpx;
  opacity: 0.8;
  filter: invert(1);
}

/* 搜索框样式 */
.search-box {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background: white;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.search-input {
  flex: 1;
  height: 72rpx;
  background: #f5f8ff;
  border-radius: 36rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

.search-cancel {
  padding: 20rpx;
  color: #666;
  font-size: 28rpx;
}

.tab-menu {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: white;
  border-radius: 24rpx 24rpx 0 0;
  transform: translateY(100%);
  transition: transform 0.3s ease-out;
  z-index: 100;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.tab-menu.show {
  transform: translateY(0);
}

.tab-item {
  text-align: center;
  padding: 30rpx 0;
  font-size: 32rpx;
  color: #333;
  border-bottom: 1rpx solid #f5f5f5;
}

.tab-item:last-child {
  color: #999;
  border-bottom: none;
  margin-top: 16rpx;
}

.tab-item.active {
  color: #88abda;
  font-weight: 500;
}

/* 遮罩层 */
.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 99;
}

.message-item:hover {
  transform: translateY(-10rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.message-list {
  padding-top: 10rpx;
  padding-bottom: 120rpx;
  margin-bottom: -16rpx;
}

/* 添加消息加载动画样式 */
.loading {
  text-align: center;
  padding: 20rpx;
  color: #adc5e6;
  font-size: 24rpx;
}

.menu-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 98;
}

